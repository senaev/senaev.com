{
  "bracketSpacing": true,
  "printWidth": 100,
  "tabWidth": 4,
  "useTabs": false,
  "overrides": [
    {
      "files": ["*.yml", "*.yaml"],
      "options": {
        "tabWidth": 2,
        "bracketSpacing": false
      }
    },
    {
      "files": ["*.css"],
      "options": {
        "parser": "css"
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "parser": "json",
        "tabWidth": 2
      }
    }
  ]
}
